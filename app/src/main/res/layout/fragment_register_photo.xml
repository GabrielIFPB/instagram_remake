<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	tools:context=".register.presentation.RegisterActivity"
	tools:showIn="@layout/activity_register"
	android:layout_height="match_parent">

	<androidx.appcompat.widget.AppCompatImageView
		android:layout_width="wrap_content"
		android:layout_height="120dp"
		android:layout_gravity="center"
		android:layout_marginTop="40dp"
		android:layout_marginBottom="24dp"
		android:src="@drawable/camera_icon" />

	<TextView
		style="@style/InstaTextViewVaseForm"
		android:layout_gravity="center"
		android:text="@string/photo_register_title"
		android:textSize="24sp" />

	<TextView
		style="@style/InstaTextViewVaseForm"
		android:layout_gravity="center"
		android:text="@string/photo_register_subtitle" />

	<com.inteligenciadigital.instagramremake.login.presentation.LoadingButton
		android:id="@+id/register_button_next"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:text="@string/add_photo" />

</LinearLayout>